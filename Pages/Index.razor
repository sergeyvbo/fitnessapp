@page "/"
<PageTitle>Index</PageTitle>
<RadzenRow Style="margin: 10px">
    <RadzenDropDown 
        TValue="int" 
        ValueProperty="id" 
        TextProperty="name" 
        Data="@days" 
        Style="width: 80%; min-width: 200px; max-width: 400px" 
        Name="WorkoutDay" 
        Placeholder="Select the Day"
        @bind-Value="SelectedDay" SelectedItemChanged="@WorkoutDaySelectedItemChanged"/>
</RadzenRow>
@if(SelectedDay != 0)
{
    <RadzenRow>
        <RadzenColumn>
            <RadzenSteps>
                <Steps>
                    <RadzenStepsItem Text="Warm Up">
                        <Countdown CountdownTime="@WarmUpTime" Label="Run!"></Countdown>
                    </RadzenStepsItem>
                    @foreach (var exercise in exercises)
                    {
                        <RadzenStepsItem Text="@exercise.name">
                            <Countdown CountdownTime="@ExerciseTime" Label="@exercise.name"></Countdown>
                        </RadzenStepsItem>
                    }
                    <RadzenStepsItem Text="Cool Down">
                        <Countdown CountdownTime="@CoolDownTime" Label="Stretch!"></Countdown>
                    </RadzenStepsItem>
                </Steps>
            </RadzenSteps>
        </RadzenColumn>
    </RadzenRow>
}

